@model List<UserViewModel>
<h1>System Users</h1>
<hr />

<a class="btn btn-primary" href="~/User/Create">Add User</a>
<br />
<br />

@if (Model.Any())
{
    <table class="table table-hover">
        <tr>
            <th>UserName</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Creation Date</th>
            <th>Opration</th>
        </tr>

        @foreach (var user in Model)
        {
            <tr>
                <th>@user.UserName</th>
                <th>@user.Email</th>
                <th>@user.PhoneNumber</th>
                <th>@user.CreatedAt.ToString("yyyy:MM:dd")</th>
                <th>
                    <a class="btn btn-danger" href="~/User/Delete/@user.Id">Delete</a>
                </th>
            </tr>
        }
    </table>
}
else
{
    <div class="alert alert-warning">
        No Users
    </div>
}